/* component/oneUp/oneUp.wxss */
@import '../../utils/iconfont.wxss';
@font-face {
  font-family: 'iconfont';  /* project id 1971970 */
  src: url('//at.alicdn.com/t/font_1971970_4p5ho8zeqra.eot');
  src: url('//at.alicdn.com/t/font_1971970_4p5ho8zeqra.eot?#iefix') format('embedded-opentype'),
  url('//at.alicdn.com/t/font_1971970_4p5ho8zeqra.woff2') format('woff2'),
  url('//at.alicdn.com/t/font_1971970_4p5ho8zeqra.woff') format('woff'),
  url('//at.alicdn.com/t/font_1971970_4p5ho8zeqra.ttf') format('truetype'),
  url('//at.alicdn.com/t/font_1971970_4p5ho8zeqra.svg#iconfont') format('svg');
}
.oneUp{
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
  margin: 20rpx 0;
}
.oneUp image{
  width: 90rpx;
  height: 90rpx;
  border-radius: 10rpx;
}
.oneUp .message{
  width: 300rpx;
  overflow-x: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.oneUp button{
  margin: 0;
  padding: 0;
  background-color: #eee;
  width: 125rpx;
  height: 50rpx;
  font-size: 25rpx;
  line-height: 50rpx;
}
.oneUp .unfocus{
  color: #D4237A;
}
.oneUp .focus{
  color: #999;
}