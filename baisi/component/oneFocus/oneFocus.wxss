/* component/oneFocus/oneFocus.wxss */
.onefocus{
  position: relative;
  padding: 15rpx;
  display: flex;
  height: 100rpx;
  align-items: center;
  border-bottom: 1px solid #eee;
}
.onefocus .head{
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
}
.onefocus .message{
  height: 100%;
  display: flex;
  align-items: center;
}
.onefocus .gender{
  width: 50rpx;
  height: 50rpx;
}
.onefocus .vip{
  width: 70rpx;
  height: 70rpx;
}
.onefocus .name{
  width: 250rpx;
  margin-left: 20rpx;
  overflow-x: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.onefocus .fans{
  width: 250rpx;
}
.onefocus .cancelFocus{
  width: 100%;
  height: 130rpx;
  background-color: rgba(255,0,0,0.8);
  position: absolute;
  top: 0;
  left: 0;
  text-align: center;
  line-height: 130rpx;
  font-size: 30rpx;
  color: #fff;
}