.noLogin {
  width: 100%;
  padding-top: 200rpx;
}

.noLogin image {
  display: block;
  width: 250rpx;
  height: 250rpx;
  margin: 0 auto;
}

.noLogin view {
  text-align: center;
  margin-bottom: 50rpx;
  font-size: 30rpx;
  color: #666;
}
.noLogin button{
  width: 500rpx !important;
  background-color: #fff;
  border: 1px solid #aaa;
  color: #D4237A;
}
.noLogin button:active{
  color: green;
}
.nothing{
  text-align: center;
  font-size: 35rpx;
  padding-top: 350rpx;
}
.specialSuggest{
  width: 100vw;
}
.suggestTitle{
  font-size: 35rpx;
  padding-left: 35rpx;
  margin-bottom: 15rpx;
  color: #D4237A;
}
