.story-box {
    width: 100%;
}

.story-item {
    width: 100%;
    display: flex;
    align-items: center;
    background-color: #F5F6F5;
    margin-bottom: 10rpx;
}

.story-image {
    width: 90rpx;
    height: 90rpx;
    border-radius: 50%;
    margin: 20rpx;
}

.story-item-detail {
    width: 80%;
}

.name {
    color: #2A98E0;
    font-size: 28rpx;
}

.detail {
    font-size: 30rpx;
    line-height: 40rpx;
    width: 100%;
    height: 40rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}