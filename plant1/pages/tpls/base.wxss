.no-data {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.upper-word {
    position: absolute;
    top: 0;
    left: 0;
    height: 100%;
    width: 100%;
    color: #fff;
    font-size: 45rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    text-align: center;
    background-color: rgba(0, 0, 0, .25);
}

.footer-account-box {
    position: fixed;
    bottom: 0;
    height: 92rpx;
    width: 100%;
    display: flex;
    border-top: 1rpx solid #ccc;
    border-bottom: 1rpx solid #ccc;
}

.disabled {
    pointer-events: none;
}


/*订单三种状态*/

.order-status-txt {
    font-size: 30rpx;
}

.order-status-txt.unpay {
    color: #B42F2D;
}

.order-status-txt.payed {
    color: #8aaa3e;
}

.order-status-txt.done {
    color: #57AB53;
}

.order-no-txt {
    letter-spacing: 2rpx;
    color: #999;
}

.add-new-address {
    width: 100%;
    height: 90rpx;
    font-size: 28rpx;
    color: #989898;
    display: flex;
    align-items: center;
    justify-content: center;
}

.add-new-address .icon {
    /*font-size: 40rpx;*/
    color: #1296db;
    margin-right: 10rpx;
}