@import "../tpls/base.wxss";
@import "../tpls/order/order-tpl.wxss";
.userinfo {
    width: 90%;
    margin-top: 10rpx;
    display: flex;
    align-items: flex-end;
    justify-content: flex-start;
    margin-left: 20rpx;
}

.userinfo-avatar {
    width: 128rpx;
    height: 128rpx;
    margin: 10rpx;
    border-radius: 50%;
}

.userinfo-right {
    width: 70%;
    margin-left: 10rpx;
    margin-bottom: 15rpx;
}

.userinfo-nickname {
    font-size: 30rpx;
    color: #1296db;
}

.integralCon {
    width: 100%;
    display: flex;
    align-items: center;
}

.user_integral {
    font-size: 27rpx;
    color: #8aaa3e;
}

.explain {
    width: 30rpx;
    height: 30rpx;
    opacity: 0.7;
    margin-left: 5rpx;
}

.long,
.short {
    margin: 20rpx 0rpx;
    background-color: #ddd;
    width: 100%;
    height: 8px;
}

.short {
    width: 93%;
    height: 1px;
}

.content {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: flex-end;
}

.left {
    font-size: 30rpx;
}

.right {
    width: 35rpx;
    height: 35rpx;
}

.bottomCon {
    width: 93%;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding-right: 10rpx;
}

.allOrders {
    width: 100%;
    padding-bottom: 15rpx;
    color: #888;
    text-align: center;
}